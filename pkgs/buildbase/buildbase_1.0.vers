#!/bin/bash

APP_IMG_NAME="buildbase"
APP_IMG_TAG="latest"
APP_VER="1.0"
APP_IMG="${ZETA_DOCKER_REG_URL}/${APP_IMG_NAME}:${APP_IMG_TAG}"

if [ "$BUILD" == "Y" ]; then

cat > ./Dockerfile << EOL

