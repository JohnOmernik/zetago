RUN apt-get update && apt-get install -y binutils git nano cpio net-tools rpm2cpio unzip python-pip && pip install requests && apt-get clean && apt-get autoremove -y

RUN mkdir -p /app
WORKDIR /app
CMD ["/bin/bash"]

EOL

fi

